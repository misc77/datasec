                <div id="content">
                    <div class="row">    
                        <form name="rechteForm" novalidate class="col s12">
                            <div class="row">
                                <h4 class="title">{{title}}</h4>
                            </div>
                            <div class="card blue-grey lighten-5 col s12">
                                <div class="card-content">
                                    <div class="row">
                                        <div class="input-group">
                                            <div class="input-field col s6">
                                                <i class="material-icons prefix">label</i>
                                                <input type="text" id="bezeichnung" name="bezeichnung" ng-model="formData.bezeichnung" required class="validate">
                                                <label class="active" for="bezeichnung">Bezeichnung</label>
                                                <div class="help-block" ng-messages="rechteForm.bezeichnung.$error" ng-if="rechteForm.bezeichnung.$touched">
                                                    <p ng-message="required" >Bezeichnung ist ein Pflichtfeld!</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="input-group">
                                            <div class="input-field col s6">
                                                <i class="material-icons prefix">description</i>
                                                <input type="text" id="beschreibung" name="beschreibung" ng-model="formData.beschreibung">
                                                <label class="active" for="beschreibung">Beschreibung</label>     
                                            </div>  
                                        </div>
                                    </div>        
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-group">
                                    <a class="waves-effect waves-light btn" ng-if="!rechteForm.$invalid" ng-click="save()"><i class="material-icons left">save</i>speichern</a>
                                    <a class="waves-effect waves-light btn disabled" ng-if="rechteForm.$invalid" ng-click="save()"><i class="material-icons left">save</i>speichern</a>
                                    <a class="waves-effect waves-light btn" ng-click="reset()"><i class="material-icons left">cancel</i>schliessen</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

