                        <form name="rechteForm" ng-controller="staticDataCtrl" novalidate>
                            <p class='title'>{{title}}</p>
                            <div class="input-group">
                                <span class="input-group-addon" id="basic-addon1">Bezeichnung:</span>
                                <input type="text" class="form-control" placeholder="Bezeichnung des Rechts" aria-describedby="basic-addon1" name="bezeichnung" ng-model="formData.bezeichnung" required>
                                <div class="help-block" ng-messages="rechteForm.bezeichnung.$error" ng-if="rechteForm.bezeichnung.$touched">
